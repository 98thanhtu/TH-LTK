<h1>Teachers Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.student_id %></td>
        <td><%= review.title %></td>
        <td><%= review.content %></td>
        <td><%= link_to 'Show', teachers_review_path(review) %></td>
        <td><%= link_to 'Edit', edit_teachers_review_path(review) %></td>
        <td><%= link_to 'Destroy', teachers_review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teachers Review', new_teachers_review_path %>
