<section style="margin-bottom:-100px">
  <div class="py-20 bg-gray-900 radius-for-skewed">
    <div class="container mx-auto px-4">
      <div class="mb-16 max-w-xl mx-auto text-center">
        <h2 class="text-5xl font-bold text-white">Tạo mới báo cáo</h2>
        <br>
      </div>
      <%= form_for ([:teachers, @review]) do |form| %>
        <% if review.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

            <ul>
              <% review.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field" style="display:none">
          <%= form.number_field :teacher_id, value:current_teacher.id %>
        </div>

        <div class="form-group">
          <label class="text-white">Học sinh</label>
          <br>
          <%= form.collection_select :student_id, Student.order(:name), :id, :name, style:"width:100%" %>
        </div>

        <div class="field">
          <label class="text-white">Tiêu đề</label>
          <%= form.text_field :title, style:"width:100%" %>
        </div>

        <div class="field">
          <label class="text-white">Nội dung</label>
          <%= form.text_area :content, style:"width:100%" %>
        </div>
        <button class="btn btn-primary" type="submit">Tạo báo cáo</button>
        <%= link_to 'Trở về', teachers_reviews_path, style:"color:white", :class => "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</section>
