<section style="margin-bottom:-100px">
  <div class="py-20 bg-gray-900 radius-for-skewed">
    <div class="container mx-auto px-4">
      <div class="mb-16 max-w-xl mx-auto text-center">
        <h2 class="text-5xl font-bold text-white">Chỉnh sửa sản phẩm</h2>
        <br>
      </div>
      <%= form_for ([:teachers, @product]) do |form| %>
        <% if @product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
              <% @product.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

    <div class="field">
        <label class="text-white">Ảnh đại diện</label>
            <%= form.file_field :image, id: :product_image, class:"form-control" %>
        </div>

        <div style="width:400px;margin:0 auto">
            <% if @product.image? %>
                <%= image_tag @product.image_url %>
            <br>
            <%= label_tag :remove_image do %>
                <%= form.check_box :remove_image %>
                <span class="text-white">Xóa ảnh</span>
            <%end%>
        <% end %>
            <br>
        </div>

        <div class="field">
          <label class="text-white">Tên sản phẩm</label>
          <%= form.text_field :name, style:"width:100%" %>
        </div>

        <div class="field">
          <label class="text-white">Giá tiền</label>
          <%= form.number_field :price, style:"width:100%" %>
        </div>

        <div class="field">
          <label class="text-white">Số lượng</label>
          <%= form.number_field :quantity, style:"width:100%" %>
        </div>

        <div class="field">
          <label class="text-white">Giới thiệu sản phẩm</label>
          <%= form.text_area :description, style:"width:100%" %>
        </div>
        <button class="btn btn-primary" type="submit">Lưu</button>
        <%= link_to 'Trở về', teachers_products_path, style:"color:white", :class => "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</section>
