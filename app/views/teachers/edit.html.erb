<div class="container">
  <h1 class="text-center">Cập nhật thông tin</h1>
  <%= form_for @teacher do |f| %>
    <% if @teacher.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this idea from being saved:</h2>

        <ul>
          <% @teacher.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <label>Ảnh đại diện</label>
      <%= f.file_field :avatar, id: :teacher_avatar, class:"form-control" %>
    </div>

    <div style="width:400px;margin:0 auto">
      <% if @teacher.avatar? %>
      <%= image_tag @teacher.avatar_url %>
      <br>
      <%= label_tag :remove_avatar do %>
        <%= f.check_box :remove_avatar %>
        <span>Xóa ảnh đại diện</span>
      <%end%>
    <% end %>
    <br>
    </div>

    <div class="field">
      <label>Họ tên</label>
      <%= f.text_field :name, class:"form-control", id:"exampleFormControlInput1" %>
    </div>
    <div class="field">
      <label>Số điện thoại</label>
      <%= f.text_field :phone, class:"form-control", id:"exampleFormControlInput1" %>
    </div>
    <div class="field">
      <label>Địa chỉ</label>
      <%= f.text_field :address, class:"form-control", id:"exampleFormControlInput1" %>
    </div>
    <div class="field">
      <label>Giới tính</label>
      <%= f.text_field :gender, class:"form-control", id:"exampleFormControlInput1" %>
    </div>
    <div class="field">
      <label>Lớp</label>
      <%= f.text_field :class_name, class:"form-control", id:"exampleFormControlInput1" %>
    </div>
    <div class="field">
      <label>Năm học</label>
      <%= f.text_field :school_year, class:"form-control", id:"exampleFormControlInput1" %>
    </div>
    <div class="field">
      <label>Giới thiệu về bản thân</label>
      <%= f.text_area :description, class:"form-control", id:"exampleFormControlInput1" %>
    </div>
    <div class="actions">
      <button type="submit" class="btn btn-primary" style="font-size:14px">Đồng ý</button>
    </div>
  <% end %>
</div>