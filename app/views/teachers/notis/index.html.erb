<h1>Teachers Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notis.each do |noti| %>
      <tr>
        <td><%= noti.course.full_class_name %></td>
        <td><%= noti.title %></td>
        <td><%= noti.content %></td>
        <td><%= noti.is_read %></td>
        <td><%= link_to 'Show', teachers_noti_path(noti) %></td>
        <td><%= link_to 'Edit', edit_teachers_noti_path(noti) %></td>
        <td><%= link_to 'Destroy', teachers_noti_path(noti), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

