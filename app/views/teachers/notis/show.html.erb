<section style="margin-bottom:-100px">
  <div class="py-20 bg-gray-900 radius-for-skewed">
    <div class="container mx-auto px-4">
      <div class="mb-16 max-w-xl mx-auto text-center">
        <h2 class="text-5xl font-bold text-white">Chi tiết thông báo</h2>
        <br>
      </div>
        <h3 class="text-4xl font-bold text-white"><%= @noti.title %></h3>
        <p class="text-gray-400">Ngày tạo: <%= @noti.created_at.strftime("%d-%m-%Y") %></p>
        <p class="text-3xl font-bold text-white">
          <%= @noti.content %>
        </p>
        <br>
        <%= link_to 'Sửa', edit_teachers_noti_path(@noti), style:"color:white", :class => "btn btn-primary" %>
        <%= link_to 'Trở về', teachers_notis_path, style:"color:white", :class => "btn btn-danger" %>
    </div>
  </div>
</section>
