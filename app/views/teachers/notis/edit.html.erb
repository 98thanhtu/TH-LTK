<section style="margin-bottom:-100px">
  <div class="py-20 bg-gray-900 radius-for-skewed">
    <div class="container mx-auto px-4">
      <div class="mb-16 max-w-xl mx-auto text-center">
        <h2 class="text-5xl font-bold text-white">Chỉnh sửa thông báo</h2>
        <br>
      </div>
      <%= form_for ([:teachers, @noti]) do |form| %>
        <% if @noti.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@noti.errors.count, "error") %> prohibited this noti from being saved:</h2>

            <ul>
              <% @noti.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field">
            <label class="text-white">Tiêu đề</label>
            <%= form.text_field :title, style:"width:100%" %>
          </div>

          <div class="field">
            <label class="text-white">Nội dung</label>
            <%= form.text_area :content, style:"width:100%" %>
          </div>

          <button class="btn btn-primary" type="submit">Sửa thông báo</button>
          <button class="btn btn-danger"><%= link_to 'Trở về', teachers_notis_path, style:"color:white" %></button>
      <% end %>
    </div>
  </div>
</section>
