<section>
    <nav class="relative px-6 py-6 flex justify-between items-center bg-white">
      <a class="text-3xl font-bold leading-none" href="/">
        <h1>DOLACHAU<h1>
      </a>
      <div class="lg:hidden">
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <button class="navbar-burger flex items-center text-green-600 p-3">
          <svg class="block h-4 w-4 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <title>Menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
          </svg>
        </button>
      </a>
      </div>
      <%= link_to "Học Sinh", new_student_session_path, :class => 'hidden lg:inline-block py-2 px-6 bg-green-500 hover:bg-green-600 text-sm text-white font-bold rounded-l-xl rounded-t-xl transition duration-200' %>
      <%= link_to "Giáo Viên", new_teacher_session_path, :class => 'hidden lg:inline-block py-2 px-6 bg-green-500 hover:bg-green-600 text-sm text-white font-bold rounded-l-xl rounded-t-xl transition duration-200' %>
    </nav>
    <div class="topnav">
      <div id="myLinks">
        <%= link_to "Học Sinh", new_student_session_path %>
        <%= link_to "Giáo Viên", new_teacher_session_path %>
      </div>
    </div>
    <script>
      function myFunction() {
        var x = document.getElementById("myLinks");
        if (x.style.display === "block") {
          x.style.display = "none";
        } else {
          x.style.display = "block";
        }
      }
      </script>
</section>
