<section>
  <div class="py-20 bg-gray-900 radius-for-skewed" style="margin-bottom:-100px">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap items-center -mx-3">        
        <div class="w-full px-3">
          <div class="flex p-6 flex-wrap bg-white rounded-lg shadow">
            <div class="w-full lg:w-1/2 lg:pr-3">
              <span class="h-80 lg:h-auto w-full lg:w-auto object-cover rounded-lg">
                <%= image_tag(@student.avatar_url, width: 600) if @student.avatar.present? %>
              </span>
            </div>
            <div class="w-full lg:w-1/2 lg:pl-3 lg:mt-6 order-first lg:order-last">
              <h4 class="text-md font-bold font-heading"><%= @student.name %></h4>
              <br>
              <p class="mb-6 text-base text-gray-500 leading-loose">Số điện thoại: <%= @student.phone %></p>
              <p class="mb-6 text-base text-gray-500 leading-loose">Địa chỉ: <%= @student.address %></p>
              <p class="mb-6 text-base text-gray-500 leading-loose">Giới tính: <%= @student.gender %></p>
              <p class="mb-6 text-base text-gray-500 leading-loose">Điểm tốt: <%= @student.good_mark %></p>
              <p class="mb-6 text-base text-gray-500 leading-loose">Điểm trừ: <%= @student.bad_mark %></p>
              <p class="mb-6 text-base text-gray-500 leading-loose"><%= @student.description %></p>
              <button class="btn btn-primary"><%= link_to 'Đổi mật khẩu', edit_student_registration_path, style:"color:white" %></button>
              <button class="btn btn-success"><%= link_to 'Cập nhật thông tin', edit_student_path, style:"color:white" %></button>
              <button class="btn btn-danger"><%= link_to 'Trở về', root_path, style:"color:white" %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>