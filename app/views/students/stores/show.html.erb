<section>
  <div class="py-20 bg-gray-900 radius-for-skewed" style="margin-bottom:-100px">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap items-center -mx-3">        
        <div class="w-full px-3">
          <div class="flex p-6 flex-wrap bg-white rounded-lg shadow">
            <div class="w-full lg:w-1/2 lg:pl-3 lg:mt-6 order-first lg:order-last">
              <h4 class="text-md text-red-500 font-bold font-heading"><%= @product.name %></h4>
              <br>
              <p class="mb-6 text-base text-gray-700 leading-loose"><span class="text-red-500">&#9679;</span> Giá tiền: <%= @product.price %> <span class="text-red-500">DOLACHAU</span></p>
              <% if @product.quantity <= 0 %>
                <p class="mb-6 text-base text-gray-700 leading-loose"><span class="text-red-500">&#9679;</span> Sản phẩm này đã hết hàng</p>
              <% else %>
                <p class="mb-6 text-base text-gray-700 leading-loose"><span class="text-red-500">&#9679;</span> Số lượng: <%= @product.quantity %></p>
              <% end %>
              <p class="mb-6 text-base text-gray-700 leading-loose"><span class="text-red-500">&#9679;</span> Chi tiết sản phẩm: <%= @product.description %></p>
            </div>
            <div class="w-full lg:w-1/2 lg:pr-3">
              <span class="h-80 lg:h-auto w-full lg:w-auto object-cover rounded-lg">
                <%= image_tag(@product.image_url, width: 600) if @product.image.present? %>
              </span>
            </div>
            <div style="margin-top:20px">
              <% if @product.quantity > 0 %>
                <% if @current_student.avg_mark >= @product.price %>
                  <%= link_to 'Mua ngay', edit_students_store_path(@product), style:"color:white", :class => "btn btn-primary", data: { confirm: 'Bạn có chắc muốn mua không?' } %>
                  <%= link_to 'Trở về', students_stores_path, style:"color:white", :class => "btn btn-danger" %>
                <% else %>
                  <button class="btn btn-primary" onClick="buy()">Mua Ngay</button>
                  <%= link_to 'Trở về', students_stores_path, style:"color:white", :class => "btn btn-danger" %>
                <% end %>
              <% else %>
                <button class="btn btn-primary" onClick="buy2()">Mua Ngay</button>
                <%= link_to 'Trở về', students_stores_path, style:"color:white", :class => "btn btn-danger" %>
              <% end %>

              <script>
                function buy(){
                  alert('Bạn không đủ DOLACHAU để mua sản phẩm này.\n\Hãy cố gắng hơn nhé!!!');
                }
                function buy2(){
                  alert('Sản phẩm này đã hết hàng\n\Hãy quay lại vào lần sau nhé!!! !!!');
                }
              </script>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
