<div class="container">
  <h1>Students Reviews</h1>

  <table>
    <thead>
      <tr>
        <th>Teacher</th>
        <th>Title</th>
        <th>Content</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.teacher_id %></td>
          <td><%= review.title %></td>
          <td><%= review.content %></td>
          <td><%= review.created_at.strftime("%d-%m-%Y") %></td>
          <td><%= link_to 'Xem ch tiáº¿t', students_review_path(review) %></td>
        </tr>
      <% end %>
    </tbody>
